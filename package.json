{
  "name": "ts-express-template",
  "version": "1.0.0",
  "description": "template for quickly starting up a typescript + express project",
  "author": "Endut",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "git+ssh://git@bitbucket.org/modelydev/hbr-ba-presenter.git"
  },
  "main": "src/index.ts",
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "dev": "npm run dev:server & npm run dev:client",
    "dev:server": "cd client && npm run dev",
    "dev:client": "cd server && npm run dev",
    "postinstall": "npm run install:client && npm run install:server",
    "install:client": "cd client && npm install",
    "install:server": "cd server && npm install"
  },
  "dependencies": {
    "@types/express": "^4.16.0",
    "bunyan": "^1.8.12",
    "express": "^4.16.4",
    "tslint": "^5.12.0"
  },
  "devDependencies": {
    "ts-node-dev": "^1.0.0-pre.32",
    "typescript": "^3.2.2"
  }
}
